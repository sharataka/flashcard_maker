<center>
	
	<h1><%= @deck.name %></h1>
	<%= link_to "Edit Name", edit_deck_path(@deck), :class => "btn btn-large btn-warning" %>
  <a class = "btn btn-large btn-danger" href="/decks/<%= @deck.id %>" data-confirm="Are you sure you want to delete this deck?" data-method="delete" rel="nofollow">Delete Deck</a>

</center>

<hr>
<center>
<a href = "#" class = "btn btn-large btn-primary">
	Study deck
</a>

<a href = "/decks/<%= @deck.id %>/flashcards/new" class = "btn btn-large btn-success">
	<!-- <span class="glyphicon glyphicon-plus"></span>  -->
	Add a card
</a>
</center>

<h3><%= pluralize(@deck.flashcards.count, 'card') %></h3>
<% @deck.flashcards.each do |flashcard| %>

          <div class="panel panel-info">          
            <div class="panel-heading">
              <h3 class="panel-title"><%= flashcard.front %> </h3>
             
            </div>

            <div class="panel-body">
              <%= flashcard.back %>
            </div>
            <center><a href = "/decks/<%= @deck.id %>/flashcards/<%= flashcard.id%>/edit">Edit</a>
          <%= link_to "Delete", [@deck, flashcard], :method => :delete,
       :confirm => "Are you sure you want to delete this flashcard?" %></center>
          </div>



<% end %>


<br/>


