<div class="row">
        <div class="col-lg-12">
          <center>
            <h3>Edit your deck</h3>

            <%= form_for(@deck) do |f| %> 
            <%= f.text_field :name, :class => "form-control" %>
            <br>

            <%= f.submit "Save", :class => "btn btn-large btn-success" %>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

            <%= link_to "Delete", @deck, :method => :delete,
       :confirm => "Are you sure you want to delete this deck?", :class => "btn btn-large btn-danger" %>

			<% end %>

          </center>
        </div>
      </div>

